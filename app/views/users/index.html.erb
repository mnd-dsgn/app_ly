<div class="jumbotron" id="solid-bground">

  <div class="row">
    <div class="col-md-8">

      <h1>Welcome to App.ly</h1>
    </div>
      <br>
    <div class="col-md-7">
      <h3>Your Complete Guide to Applying to College</h3>
    </div>
    <div class="col-md-5">
      <% unless current_user %>
        <div class="col-md-4 col-sm-4 col-xs-8 col-xs-offset-2 col-sm-offset-0">
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg"  %>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 col-xs-offset-2 col-sm-offset-0">
          <%= link_to "Log In!", new_user_session_path, :class => 'btn btn-info btn-lg'  %>
        </div>
        <div class="col-md-1 col-sm-4 col-xs-12 col-xs-offset-2 col-sm-offset-0">
          <%= link_to "<i class=\"fa fa-google-plus-square\" aria-hidden=\"true\"></i>
    ".html_safe, user_google_oauth2_omniauth_authorize_path, class: "center-text", id: "google-plus-sign-in" %>
        </div>
      <% end %>

    </div>
    <%= render "search_bar" %>
  </div>
  </div>

</div>